# Database Configuration
# Use a connection string for your local PostgreSQL database or a cloud provider like Neon
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/thrifthub

# Server Configuration
PORT=5000
SESSION_SECRET=development_secret_key_change_in_production

# Shopify Integration
# Required for syncing orders and customers
SHOPIFY_ACCESS_TOKEN=your_access_token
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
# Legacy password support if needed
SHOPIFY_PASSWORD=

# Email Integration (Incoming - IMAP)
# Used to scan for order-related emails
IMAP_HOST=imap.outlook.com
IMAP_PORT=993
IMAP_USER=your_email@example.com
IMAP_PASS=your_email_password

# Email Integration (Outgoing - SMTP)
# Used to send notifications
SMTP_HOST=smtp.outlook.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# Email Provider Configuration
# Options: 'outlook', 'gmail', or custom
EMAIL_PROVIDER=outlook
